<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.game.dabba.tictactoe.gameSettings">

    <Switch
        android:id="@+id/switchPlaySecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Play Second        "
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="114dp"
        android:layout_marginStart="114dp" />

    <Switch
        android:id="@+id/switchSelectO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switchPlaySecond"
        android:layout_alignStart="@+id/switchPlaySecond"
        android:layout_centerVertical="true"
        android:checked="false"
        android:splitTrack="false"
        android:text=" Select O                "
        tools:checked="false" />

</RelativeLayout>
